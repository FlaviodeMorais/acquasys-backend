{
  "name": "acquasys-backend",
  "version": "1.0.0",
  "description": "AcquaSys Backend - Integração MQTT, InfluxDB, Telegram e WebSocket",
  "type": "module",
  "license": "MIT",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "check": "tsc --noEmit",
    "check-env": "node check-env.js",
    "db:push": "drizzle-kit push",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.35.0",
    "axios": "^1.11.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "mqtt": "^5.14.1",
    "ws": "^8.18.0",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0",

    "@types/express": "^4.17.21",
    "@types/node": "^20.16.11",
    "@types/ws": "^8.5.13"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "drizzle-kit": "^0.30.6"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "acquasys",
    "mqtt",
    "influxdb",
    "telegram-bot",
    "websocket",
    "iot",
    "backend"
  ],
  "author": "Flávio de Morais <flaviodemorais@hotmail.com>"
}

{
  "compilerOptions": {
    /* === Saída e estrutura === */
    "rootDir": ".",
    "outDir": "dist",

    /* === Compatibilidade com Node ESM === */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* === Qualidade e consistência === */
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    /* === Tipos globais === */
    "types": ["node"]
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server/drizzle.config.ts",
    "**/*.test.ts"
  ]
}

